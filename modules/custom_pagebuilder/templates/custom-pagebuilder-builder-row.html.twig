<div class="cpb-element cpb-row">
   <div class="gavias-blockbuilder-content">
      <input type="hidden" class="cpb-row-id" {{ row ? 'name="cpb-row-id[]"' : '' }} value="{{ row_id }}" />
      <div class="cpb-el-header header-row">
          <div class="cpb-add-element">
            <a class="bb-drap action" ><i class="fa fa-arrows"></i></a>
            
            <div class="action-add-column">
               <a class="btn-hover">{{ 'Add column'|t }}</a>
               <div class="hover-content">
                  <a class="cpb-add-column action" data-width="2">1/6</a>
                  <a class="cpb-add-column action" data-width="3">1/4</a>
                  <a class="cpb-add-column action" data-width="4">1/3</a>
                  <a class="cpb-add-column action" data-width="5">5/12</a>
                  <a class="cpb-add-column action" data-width="6">1/2</a>
                  <a class="cpb-add-column action" data-width="7">7/12</a>
                  <a class="cpb-add-column action" data-width="8">2/3</a>
                  <a class="cpb-add-column action" data-width="9">3/4</a>
                  <a class="cpb-add-column action" data-width="10">5/6</a>
                  <a class="cpb-add-column action" data-width="11">11/12</a>
                  <a class="cpb-add-column action" data-width="12">1/1</a>
               </div>
            </div>

            
            <a class="cpb-add-clear">Add Clear</a>
           
          </div>
         <div class="cpb-el-action">
            <a class="bb-btn cpb-edit big action" title="Edit" ><i class="fa fa-pencil"></i></a>
            <a class="bb-btn cpb-el-clone cpb-row-clone big action" title="Clone" ><i class="fa fa-clone"></i></a>
            <a class="bb-btn cpb-row-delete big action" title="Delete" ><i class="fa fa-times"></i></a>
         </div>
      </div>
         
      <div class="cpb-droppable cpb-sortable cpb-droppable-row clearfix">
        {% if row and row.columns %}
          {% for key, value_col in row.columns %}
              {{ custom_pagebuilder_column_twig(item_std, column_std, value_col, loop.index, row_id) }}
          {% endfor %}
        {% endif %}
      </div>

   </div>
      
     <div class="cpb-el-meta">
        <div class="cpb-form">
            {{ cpb_fields_row_twig(row_std, row) }}
        </div>
     </div>
      
  </div>